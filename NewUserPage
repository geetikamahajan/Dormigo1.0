    function previewFile(){
        var reader  = new FileReader();

       reader.readAsDataURL(document.getElementById("uploadImage").files[0]);
       reader.onload = function (oFREvent) {
           document.getElementById("hi").src = oFREvent.target.result;
       };
   }
